<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.deltadna.android.sdk.notifications.example">
    
    <application
        android:name=".ExampleApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:allowBackup="false"
        tools:ignore="GoogleAppIndexingWarning">
        
        <activity
            android:name=".ExampleActivity"
            android:label="@string/example_title"
            android:launchMode="singleTask">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- manually added -->
        <service
            android:name="com.deltadna.android.sdk.notifications.example.StyledNotificationListenerService">
            
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        
        <!-- manually added -->
        <meta-data
            android:name="ddna_notification_icon"
            android:value="ic_stat_logo"/>
        <meta-data
            android:name="ddna_start_launch_intent"
            android:value="true"/>
    </application>
</manifest>
